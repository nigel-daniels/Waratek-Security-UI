<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

 <plugin>

  <!-- EEF extensions -->
   <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
      <factory
            uri="http://www.waratek.com/rules/1.1"
            class="com.waratek.rules.providers.RulesEEFAdapterFactory"
            supportedTypes="org.eclipse.emf.eef.runtime.providers.PropertiesEditingProvider"/>
   </extension>
   <extension
         point="org.eclipse.emf.eef.runtime.PropertiesEditionPartProvider">
      <PropertiesEditionPartProvider
            providerClass="com.waratek.rules.providers.RulesPropertiesEditionPartProvider">
      </PropertiesEditionPartProvider>
   </extension>

  <!-- Tabbed properties views extension -->
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="com.waratek.rules.properties"
            labelProvider="org.eclipse.emf.eef.runtime.ui.utils.EEFLabelProvider">
         <propertyCategory
               category="default">
         </propertyCategory>
         <propertyCategory
               category="extended">
         </propertyCategory>
         <propertyCategory
               category="advanced">
         </propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="com.waratek.rules.properties">
         <propertyTab
               id="Base"
               label="Base"
               category="default">
         </propertyTab>

      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="com.waratek.rules.properties">
         <propertySection
               class="com.waratek.rules.parts.forms.RuleDocumentPropertiesEditionPartForm"
               filter="com.waratek.rules.providers.RuleDocumentPropertiesEditionProvider$EditionFilter"
               id="com.waratek.rules.section.RuleDocument"
               tab="Base">
         </propertySection>
         <propertySection
               class="com.waratek.rules.parts.forms.FilePropertiesEditionPartForm"
               filter="com.waratek.rules.providers.FilePropertiesEditionProvider$EditionFilter"
               id="com.waratek.rules.section.File"
               tab="Base">
         </propertySection>
         <propertySection
               class="com.waratek.rules.parts.forms.NetworkPropertiesEditionPartForm"
               filter="com.waratek.rules.providers.NetworkPropertiesEditionProvider$EditionFilter"
               id="com.waratek.rules.section.Network"
               tab="Base">
         </propertySection>
         <propertySection
               class="com.waratek.rules.parts.forms.ReflectionPropertiesEditionPartForm"
               filter="com.waratek.rules.providers.ReflectionPropertiesEditionProvider$EditionFilter"
               id="com.waratek.rules.section.Reflection"
               tab="Base">
         </propertySection>
         <propertySection
               class="com.waratek.rules.parts.forms.ThrowableClassPropertiesEditionPartForm"
               filter="com.waratek.rules.providers.ThrowableClassPropertiesEditionProvider$EditionFilter"
               id="com.waratek.rules.section.ThrowableClass"
               tab="Base">
         </propertySection>
         <propertySection
               class="com.waratek.rules.parts.forms.ClassLinkPropertiesEditionPartForm"
               filter="com.waratek.rules.providers.ClassLinkPropertiesEditionProvider$EditionFilter"
               id="com.waratek.rules.section.ClassLink"
               tab="Base">
         </propertySection>
         <propertySection
               class="com.waratek.rules.parts.forms.Native_PropertiesEditionPartForm"
               filter="com.waratek.rules.providers.Native_PropertiesEditionProvider$EditionFilter"
               id="com.waratek.rules.section.Native"
               tab="Base">
         </propertySection>
         <propertySection
               class="com.waratek.rules.parts.forms.SQLInjectionPropertiesEditionPartForm"
               filter="com.waratek.rules.providers.SQLInjectionPropertiesEditionProvider$EditionFilter"
               id="com.waratek.rules.section.SQLInjection"
               tab="Base">
         </propertySection>
         <propertySection
               class="com.waratek.rules.parts.forms.CommentPropertiesEditionPartForm"
               filter="com.waratek.rules.providers.CommentPropertiesEditionProvider$EditionFilter"
               id="com.waratek.rules.section.Comment"
               tab="Base">
         </propertySection>
      </propertySections>
   </extension>
 </plugin>
